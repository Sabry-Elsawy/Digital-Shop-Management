@model List<WMS_DEPI_GRAD.Models.Worker>

@{
    ViewData["Title"] = "Worker Management";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Worker Management</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-dark">Workers</h1>
            <p class="text-muted">Manage warehouse staff</p>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addWorkerModal">
            <i class="fa-solid fa-plus me-2"></i> Add Worker
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Active Workers</p>
                        <h3 class="fw-bold">@Model.Count(w => w.Status == "active")</h3>
                    </div>
                    <div style="" class="bg-success bg-opacity-25 rounded-circle p-3 text-success">
                        <i class="fa-solid fa-users fs-3"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Total Staff</p>
                        <h3 class="fw-bold">@Model.Count</h3>
                    </div>
                    <div class="bg-primary bg-opacity-25 rounded-circle p-3 text-primary">
                        <i class="fa-solid fa-clock-rotate-left fs-3"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Warehouse Staff</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Shift</th>
                        <th>Tasks Completed</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var worker in Model)
                    {
                        <tr>
                            <td class="text-monospace">@worker.Id</td>
                            <td>@worker.Name</td>
                            <td class="text-muted">@worker.Email</td>
                            <td>@worker.Role</td>
                            <td>@worker.Shift</td>
                            <td><strong>@worker.TasksCompleted</strong></td>
                            <td>
                                @if (worker.Status == "active")
                                {
                                    <span class="badge bg-success bg-opacity-25 text-success border border-success">
                                        <i class="fa-solid fa-circle me-1"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary text-dark">
                                        <i class="fa-regular fa-circle me-1"></i> Offline
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Worker Modal -->
<div class="modal fade" id="addWorkerModal" tabindex="-1" aria-labelledby="addWorkerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="Create" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addWorkerModalLabel">Add New Worker</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input name="name" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input name="email" type="email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Role</label>
                    <select name="role" class="form-select" required>
                        <option value="">Select Role</option>
                        <option value="Picker">Picker</option>
                        <option value="Packer">Packer</option>
                        <option value="Receiver">Receiver</option>
                        <option value="Forklift Operator">Forklift Operator</option>
                        <option value="Supervisor">Supervisor</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Shift</label>
                    <select name="shift" class="form-select" required>
                        <option value="">Select Shift</option>
                        <option value="Morning">Morning</option>
                        <option value="Afternoon">Afternoon</option>
                        <option value="Night">Night</option>
                    </select>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Add Worker</button>
            </div>
        </form>
    </div>
</div>
