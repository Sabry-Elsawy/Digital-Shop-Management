<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-white rounded-top-4">
            <h3 class="mb-0"><i class="fa-solid fa-pen me-2"></i>Edit Warehouse</h3>
        </div>

        <div class="card-body p-4">
            <form asp-controller="Warehouses" asp-action="Edit" method="post">
                <input type="hidden" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Warehouse Name</label>
                    <input class="form-control" placeholder="Enter warehouse name" />
                    <span class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Location</label>
                    <input class="form-control" placeholder="Enter warehouse location" />
                    <span class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Capacity</label>
                    <input type="number"
                           class="form-control"
                           placeholder="Enter warehouse capacity" />
                    <span class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Warehouses"
                       asp-action="Index"
                       class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="fa-solid fa-save"></i> Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
