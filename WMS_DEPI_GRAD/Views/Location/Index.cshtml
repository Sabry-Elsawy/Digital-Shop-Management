@{
    ViewData["Title"] = "Locations — Warehouse Manager";
}

<div class="container py-4" id="app-root">

    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb small mb-0">
            <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Location Management</li>
        </ol>
    </nav>

    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h3 mb-0">Locations</h1>
            <p class="text-muted small mb-0">Manage warehouse locations</p>
        </div>

        <div>
            <button id="btnAddLocation" class="btn btn-primary btn-lg d-flex align-items-center gap-2" data-bs-toggle="modal" data-bs-target="#createLocationModal">
                <i class="fa-solid fa-plus me-2"></i>
                Add Location
            </button>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="font-monospace">Location Code</th>
                            <th>Zone</th>
                            <th>Aisle</th>
                            <th>Rack</th>
                            <th>Bin</th>
                            <th>Capacity</th>
                        </tr>
                    </thead>
                    <tbody id="locationsTableBody"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@* Modal *@
<div class="modal fade" id="createLocationModal" tabindex="-1" aria-labelledby="createLocationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createLocationModalLabel">Add New Location</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="modalCloseBtn"></button>
            </div>

            <div class="modal-body">
                <p class="text-muted small">Create a new warehouse location with Zone → Aisle → Rack → Bin hierarchy</p>

                <form id="createLocationForm" novalidate>
                    <div class="mb-3">
                        <label class="form-label">Zone <span class="text-danger">*</span></label>
                        <input type="text" id="zone" name="zone" class="form-control" required maxlength="10" />
                        <div class="invalid-feedback">Zone is required (max 10 characters).</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Aisle <span class="text-danger">*</span></label>
                        <input type="text" id="aisle" name="aisle" class="form-control" required maxlength="10" />
                        <div class="invalid-feedback">Aisle is required (max 10 characters).</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Rack <span class="text-danger">*</span></label>
                        <input type="text" id="rack" name="rack" class="form-control" required maxlength="10" />
                        <div class="invalid-feedback">Rack is required (max 10 characters).</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Bin <span class="text-danger">*</span></label>
                        <input type="text" id="bin" name="bin" class="form-control" required maxlength="10" />
                        <div class="invalid-feedback">Bin is required (max 10 characters).</div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button id="submitCreateLocation" type="submit" class="btn btn-primary d-flex align-items-center">
                            <span id="submitSpinner" class="spinner-border spinner-border-sm me-2 d-none"></span>
                            <span id="submitText">Create Location</span>
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<div id="toastContainer" class="position-fixed top-0 end-0 p-3" style="z-index:1080;"></div>

@section Scripts {
    <script src="~/js/location.js"></script>
}
